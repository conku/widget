{{$result := .Result}}
{{$resource := .Resource}}

{{$actions := load_actions "new"}}
{{if $actions}}
  <div class="qor-page__header">{{$actions}}</div>
{{end}}

<main class="mdl-layout__content qor-layout__tab-content has-header has-subnav">
  <div class="qor-page__body qor-page__edit">
    {{render "shared/flashes"}}
    {{render "shared/errors"}}

    <div class="qor-form-container">
      <form class="qor-form" action="{{url_for $result $resource}}" method="POST" enctype="multipart/form-data" data-action-url="{{join_url (url_for $result $resource) "!setting"}}">
        
        <div class="qor-layout__widget qor-layout__widget-new" data-toggle="qor.widget">
          <!-->{{render_form $result new_sections}}<-->

          <ul class="qor-slideout__lists">
            <li>
              <h5 class="qor-slideout__lists-groupname">Products</h5>
              <div class="qor-slideout__lists-item">
                <a href="/admin/widget_contents/%21setting?primary_key[qor_widget_settings_scope]=&amp;primary_key[qor_widget_settings_language_code]=&amp;widget_type=Products" class="qor-widget__new">
                  <img src="/images/Widget-NormalBanner.png"><span>Products lists</span>
                </a>
                <a href="/admin/widget_contents/%21setting?primary_key[qor_widget_settings_scope]=&amp;primary_key[qor_widget_settings_language_code]=&amp;widget_type=Products" class="qor-widget__new">
                  <img src="/images/Widget-NormalBanner.png"><span>Products recommended</span>
                </a>
                <a href="/admin/widget_contents/%21setting?primary_key[qor_widget_settings_scope]=&amp;primary_key[qor_widget_settings_language_code]=&amp;widget_type=Products" class="qor-widget__new">
                  <img src="/images/Widget-NormalBanner.png"><span>Products recommended</span>
                </a>
                <a href="/admin/widget_contents/%21setting?primary_key[qor_widget_settings_scope]=&amp;primary_key[qor_widget_settings_language_code]=&amp;widget_type=Products" class="qor-widget__new">
                  <img src="/images/Widget-NormalBanner.png"><span>Products recommended</span>
                </a>
              </div>
            </li>
            <li>
              <h5 class="qor-slideout__lists-groupname">Banners</h5>
              <div class="qor-slideout__lists-item">
                <a href="/admin/widget_contents/%21setting?primary_key[qor_widget_settings_scope]=&amp;primary_key[qor_widget_settings_language_code]=&amp;widget_type=Products" class="qor-widget__new">
                  <img src="/images/Widget-Products.png"><span>ToppageBanner</span>
                </a>
              </div>
            </li>
          </ul>

          <div class="qor-layout__widget-setting"></div>
          {{if has_update_permission $resource}}
            <div class="qor-form__actions qor-layout__widget-actions" style="display: none;">
              <button class="mdl-button mdl-button--colored mdl-button--raised mdl-js-button mdl-js-ripple-effect qor-button--save" type="submit">{{t "qor_admin.form.save" "Save"}}</button>
              <a class="mdl-button mdl-button--primary mdl-js-button mdl-js-ripple-effect qor-widget__cancel" href="javascript://">{{t "qor_admin.form.cancel" "Cancel"}}</a>
            </div>
          {{end}}
          
        </div>
        
      </form>
    </div>
  </div>
</main>
